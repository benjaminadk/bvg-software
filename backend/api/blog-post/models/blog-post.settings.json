{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "name": "Blog Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "meta_title": {
      "type": "string"
    },
    "meta_description": {
      "type": "text"
    },
    "content": {
      "type": "richtext"
    },
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "string"
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "blog.tag"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "published_on": {
      "type": "date"
    },
    "read_time": {
      "type": "string"
    },
    "video": {
      "type": "component",
      "repeatable": false,
      "component": "multimedia.video"
    }
  }
}
